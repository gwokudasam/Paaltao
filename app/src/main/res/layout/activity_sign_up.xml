<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paaltao_background"
    tools:context="com.paaltao.activity.SignUpActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUpScroll"
        android:layout_below="@+id/app_bar"
        android:background="@color/black80">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.paaltao.classes.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/firstName_field"
                android:layout_height="wrap_content"
                android:hint="your first name"
                android:inputType="text"
                android:padding="14dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white90" />
        </com.paaltao.classes.FloatLabeledEditText>

        <com.paaltao.classes.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/lastName_field"
                android:layout_height="wrap_content"
                android:hint="your last name"
                android:textColor="@color/white"
                android:inputType="text"
                android:padding="14dp"
                android:textColorHint="@color/white90" />
        </com.paaltao.classes.FloatLabeledEditText>

        <com.paaltao.classes.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="your email"
                android:textColor="@color/white"
                android:id="@+id/email_field"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textColorHint="@color/white90" />
        </com.paaltao.classes.FloatLabeledEditText>

        <com.paaltao.classes.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="your contact number"
                android:id="@+id/contact_field"
                android:textColor="@color/white"
                android:inputType="phone"
                android:padding="14dp"
                android:textColorHint="@color/white90"/>
        </com.paaltao.classes.FloatLabeledEditText>

        <com.paaltao.classes.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="choose a password"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:id="@+id/password_field"
                android:padding="14dp"
                android:textColorHint="@color/white90" />
        </com.paaltao.classes.FloatLabeledEditText>

        <com.paaltao.classes.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/confirm_password_field"
                android:hint="confirm password"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white90" />
        </com.paaltao.classes.FloatLabeledEditText>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="sign up"
            android:fontFamily="sans-serif-light"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:id="@+id/signUpBtn"
            android:background="@color/black99"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

        <ProgressBar
            android:id="@+id/action_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:indeterminate="true"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="30dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="sign in"
            android:fontFamily="sans-serif-light"
            android:textAllCaps="false"
            android:id="@+id/signInBtn"
            android:textSize="18sp"
            android:background="@color/black99"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
    </ScrollView>


</RelativeLayout>

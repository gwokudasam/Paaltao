<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paaltao_background"
    tools:context="com.paaltao.activity.SignUpActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        android:orientation="vertical">

        <com.paaltao.classes.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="your name"
                android:inputType="text"
                android:padding="14dp"
                android:textColorHint="@color/white90" />
        </com.paaltao.classes.FloatLabeledEditText>

        <com.paaltao.classes.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="your email"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textColorHint="@color/white90" />
        </com.paaltao.classes.FloatLabeledEditText>

        <com.paaltao.classes.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="your contact number"
                android:inputType="phone"
                android:padding="14dp"
                android:textColorHint="@color/white90" />
        </com.paaltao.classes.FloatLabeledEditText>

        <com.paaltao.classes.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="choose a password"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColorHint="@color/white90" />
        </com.paaltao.classes.FloatLabeledEditText>

        <com.paaltao.classes.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="confirm password"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColorHint="@color/white90" />
        </com.paaltao.classes.FloatLabeledEditText>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="sign up"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:id="@+id/signUpBtn"
            android:fontFamily="sans-serif-light"
            android:background="@color/blue500"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="40dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="sign in"
            android:textAllCaps="false"
            android:id="@+id/signInBtn"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:background="@color/blue500"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


</RelativeLayout>

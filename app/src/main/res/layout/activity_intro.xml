<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paaltao_background"
    tools:context="com.paaltao.activity.IntroPageActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/pagercontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/indicator" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/introStatic"
        android:padding="10dp"
        android:layout_margin="2dp"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/half_black"
        android:id="@+id/introStatic"
        android:layout_alignParentBottom="true"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/login_text"
            android:text="Get Started Using"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fb_login"
            android:layout_below="@+id/login_text"
            android:layout_margin="4dp"
            android:text="Facebook Connect"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:background="@color/facebook_btn"/>

        <Button
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google+ Connect"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:id="@+id/google_login"
            android:layout_below="@+id/fb_login"
            android:background="@color/google_btn"/>

        <LinearLayout
            android:layout_below="@+id/google_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/signUpBtn"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-light"
                android:textSize="18sp"
                android:layout_margin="2dp"
                android:background="@color/signup_btn"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Sign In"
                android:layout_margin="2dp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-light"
                android:textSize="18sp"
                android:background="@color/signup_btn"
                android:id="@+id/signInBtn"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
